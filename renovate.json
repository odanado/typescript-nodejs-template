{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "labels": ["dependencies"],
  "extends": ["config:best-practices"],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "platformAutomerge": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "platformAutomerge": true
    }
  ]
}
