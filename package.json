{
  "name": "typescript-nodejs-template",
  "private": true,
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "@tsconfig/node16": "^1.0.2",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "esbuild": "^0.14.14",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^26.0.0",
    "jest": "^27.4.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "test": "run-p test:*",
    "test:build": "yarn build --noEmit",
    "test:jest": "yarn jest --detectOpenHandles --forceExit",
    "test:lint": "eslint --ext .js,.ts --ignore-path .gitignore .",
    "test:format": "prettier --ignore-path .gitignore . --check",
    "format": "prettier --ignore-path .gitignore . --write"
  }
