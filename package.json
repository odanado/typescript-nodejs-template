{
  "name": "typescript-nodejs-template",
  "private": true,
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "@tsconfig/node16": "^1.0.2",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.10",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "esbuild": "^0.13.15",
    "esbuild-jest": "^0.5.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.3.0",
    "jest": "^27.3.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.0",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "test": "run-p test:*",
    "test:build": "yarn build --noEmit",
    "test:jest": "yarn jest --detectOpenHandles --forceExit",
    "test:lint": "eslint --ext .js,.ts --ignore-path .gitignore .",
    "test:format": "prettier --ignore-path .gitignore . --check",
    "format": "prettier --ignore-path .gitignore . --write"
  }
